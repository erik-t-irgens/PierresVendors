@{
    Layout = "_Layout";
}

@using PierresVendors.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
    <h3>No vendors have been added yet!</h3>
    
}
@foreach (Vendor vendor in Model)
{
    <h3><a href='/vendors/@vendor.Id'><button class="button btn-outline-warning"> @vendor.Name</button></a></h3>
}

<p><a href='/'><button class="button btn-outline-success">Back Home!</button></a></p>

