@{
    Layout = "_Layout";
}

@using PierresVendors.Models;

<div class="card">

  <div class="card-header">
    <h1>Vendors</h1>
  </div>
  <div class="card-body">
@if (@Model.Count == 0)
{
  
    <h3>No vendors have been added yet!</h3>
    
}
@foreach (Vendor vendor in Model)
{
    <h3><a href='/vendors/@vendor.Id'><button class="button btn-outline-warning"> @vendor.Name</button></a></h3>
}
  </div>

<div class="card-footer">
  <a href='/'><button class="button btn-outline-success">Back Home!</button></a>
  </div>
  </div>

