@{
    Layout = "_Layout";
}

@using PierresVendors.Models;

<div class="card">

  <div class="card-header">
    <h1>Vendors</h1>
  </div>
  <div class="card-body">

   
    <p>To view orders for each of the vendors, click the name of the vendor below (in their yellow boxes)<p>
@if (@Model.Count == 0)
{
  
    <h3>No vendors have been added yet!</h3>
    
}
@foreach (Vendor vendor in Model)
{
    <h3><a href='/vendors/@vendor.Id' class="vendorButton"><button class="button btn-warning"> @vendor.Name</button></a></h3>
}
  </div>

<div class="card-footer">
  <a href='/vendors/new' class='naviButton'><button class="button btn-outline-success">Add New Vendor</button></a>
  <a href='/'><button class="button btn-outline-secondary"  class='naviButton'>Back Home</button></a>
  </div>
  </div>

