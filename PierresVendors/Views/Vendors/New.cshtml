@{
    Layout = "_Layout";
}

<div class='card'>

    <div class='card-header'>
        <h1>Add a vendor</h1>
    </div>
    <div class='card-body'>
        <p>Add a vendor here:</p>

        <form action="/vendors" method="post">
        <label for="vendorName">Vendor name</label>
        <input id="vendorName" name="vendorName" type="text">
        <button type="submit" class='button btn-outline-primary'>Add</button>
        </form>
    </div>
    <div class='card-footer'>
        <p><a href="/"  class='naviButton'><button class="button btn-outline-success">Back Home</button></a></p>
        <p><a href="/vendors"  class='naviButton'><button class="button btn-outline-secondary">Back To Vendors</button></a></p>
    </div>
</div>