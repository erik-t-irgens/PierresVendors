@{
    Layout = "_Layout";
}

<h1>Vendor's Order Details: </h1>

<div class="card">
    <div class="card-header"><h3>Vendor: @Model["vendor"].Name</h3></div>
    <div class="card-body"> <p>Title: @Model["order"].Name</p>
    <p>Description: @Model["order"].Description</p>
    <p>Price: @Model["order"].Price</p>
    <p>Date of Order: @Model["order"].Date</p>
    </div>
    <div class='card-footer'>
        <a href='/vendors/@Model["vendor"].Id/orders/new'  class='naviButton'> <button class="button btn-outline-success">Add New Order</button></a>
        <a href='/vendors/@Model["vendor"].Id'  class='naviButton'><button class="button btn-outline-secondary">Back</button></a>
    </div>
 </div>
